<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_traffic_light_up_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/if_trafficlight_red" />

        <ImageView
            android:id="@+id/tv_traffic_light_up_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/if_trafficlight_yellow" />

        <ImageView
            android:id="@+id/tv_traffic_light_up_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/if_trafficlight_green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tv_traffic_light_left_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/if_trafficlight_red" />

            <ImageView

                android:id="@+id/tv_traffic_light_left_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/if_trafficlight_yellow" />

            <ImageView
                android:id="@+id/tv_traffic_light_left_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/if_trafficlight_green" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/if_traffic"
                android:gravity="center_horizontal"
                android:text="红绿灯"
                android:textColor="@color/yellow"
                android:textSize="@dimen/text_size_30" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/len_5"
                    android:orientation="horizontal"
                    android:padding="@dimen/len_5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="元件组号"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:id="@+id/tv_traffic_light_group_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="---"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/len_5"
                    android:orientation="horizontal"
                    android:padding="@dimen/len_5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="元件编号"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:id="@+id/tv_traffic_light_node_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="---"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/len_5"
                    android:orientation="horizontal"
                    android:padding="@dimen/len_5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="帧序列号"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:id="@+id/tv_traffic_light_flame"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="---"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tv_traffic_light_right_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/if_trafficlight_red" />

            <ImageView
                android:id="@+id/tv_traffic_light_right_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/if_trafficlight_yellow" />

            <ImageView
                android:id="@+id/tv_traffic_light_right_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/if_trafficlight_green" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_traffic_light_below_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/if_trafficlight_red" />

        <ImageView
            android:id="@+id/tv_traffic_light_below_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/if_trafficlight_yellow" />

        <ImageView
            android:id="@+id/tv_traffic_light_below_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/if_trafficlight_green" />
    </LinearLayout>


</LinearLayout>
